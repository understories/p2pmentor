{
  "name": "p2pmentor",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings 1000",
    "lint:fix": "eslint . --fix --max-warnings 1000",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "prepare": "node -e \"if (!process.env.CI && process.env.HUSKY !== '0') require('husky')()\"",
    "perf:network": "tsx scripts/perf/network_page.test.ts",
    "seed:app-feedback": "tsx scripts/seed-app-feedback.ts"
  },
  "dependencies": {
    "@arkiv-network/sdk": "^0.4.4",
    "@simplewebauthn/server": "^9.0.0",
    "graphql": "^16.12.0",
    "graphql-http": "^1.22.4",
    "idb-keyval": "^6.2.1",
    "next": "^15.5.9",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-force-graph-2d": "^1.29.0",
    "react-markdown": "^10.1.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.16.0",
    "@simplewebauthn/typescript-types": "^8.3.4",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.22",
    "dotenv": "^17.2.3",
    "@playwright/test": "^1.51.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.9",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "msw": "^2.6.4",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
